{
  "name": "ai-tris-game",
  "version": "1.0.0",
  "description": "AI Color Tris is a 2D arcade game similar to other Tetris-like games, written in Typescript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && vite build",
    "build:extension": "npm run build && cp public/sidepanel.html dist/ && cp public/manifest.json dist/ && cp public/background.js dist/ && cp public/*.png dist/",
    "dev": "vite",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "keywords": [
    "tetris",
    "game",
    "ai",
    "typescript",
    "pixijs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pixi.js": "^7.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  }
}
